# compositor - background process + disable shadowing effects during session
picom --config ~/.config/picom/picom.conf &
sleep 2

# notifications
dunst &

# panel - taskbar, system tray, battery, clock
~/.config/polybar/launch.sh &
plank &

# network manager
nm-applet &

# Set display from arandr saved script
sh ~/.screenlayout/monitor.sh &

# Polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Wallpaper
feh -z --no-fehbg --bg-fill ~/wallpapers/tokyonight/

# Low battery notifier
~/.config/openbox/scripts/low_bat_notifier.sh &

# Bluetooth
blueberry-tray &

# Auto lock
xss-lock -- betterlockscreen -l &

# ibus-daemon
ibus-daemon -drx &

# Config betterlockscreen
betterlockscreen -u ~/wallpapers/tokyonight/tokyonight-wall2.png

# Enable numlock
numlockx on

# Power saving for display
xset s 480 dpms 600 600 600 &

# Reload .Xresources
xrdb -load ~/.Xresources

# Change from ugly 'X' cursor when hovering over background
xsetroot -cursor_name left_ptr

# Power manager daemon
xfce4-power-manager --daemon

# Config keyboard and mouse
libinput-gestures-setup start
xinput set-prop "DLL07BE:01 06CB:7A13 Touchpad" "libinput Natural Scrolling Enabled" 1
xinput set-prop "DLL07BE:01 06CB:7A13 Touchpad" "libinput Click Method Enabled" 0 1
xinput set-prop "DLL07BE:01 06CB:7A13 Touchpad" "libinput Disable While Typing Enabled" 0

